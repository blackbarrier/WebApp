{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>Mis datos</h1>

    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr> #}
            <tr>
                <th>Dni</th>
                <td>{{ user.dni }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ user.apellido }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ user.nombre }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Teléfono</th>
                <td>{{ user.telefono }}</td>
            </tr>
            <tr>
                <th>Domicilio</th>
                <td>{{ user.domicilio }}</td>
            </tr>
            <tr>
                <th>Fecha de nacimiento</th>
                <td>{{ user.fnac ? user.fnac|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Obra Social</th>
                <td>{{ user.obrasocial.nombreCompleto }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_index') }}">Volver</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Editar</a>
    <a href="{{ path('app_change_pass', {'id': user.id}) }}">Cambiar contraseña</a>

    {# {{ include('user/_delete_form.html.twig') }} #}
{% endblock %}
